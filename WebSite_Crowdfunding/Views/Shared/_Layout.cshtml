@using WebSite_Crowdfunding.Usefulls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Crowdfunding</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Crowdfunding", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (SessionTool.utilisateur != null)
                    {
                        <li>@Html.ActionLink("Acceuil", "Index", "Home")</li>
                        <li>@Html.ActionLink("A propos", "About", "Home")</li>
                        <li>@Html.ActionLink("Projet", "ListeProjet", "Home")</li>
                        <li>@Html.ActionLink("Inscription", "Inscription", "Home")</li>
                        <li>@Html.ActionLink("Connexion", "NomUtilisateur", "Home")</li>
                        <li>@Html.ActionLink("Nous contacter", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Deconnexion", "SignOut", "Home")</li>



                        if (SessionTool.utilisateur.IsAdmin == true)
                        {
                            <li>
                                @Html.ActionLink("Administration", "Index", "Admin", new { area = "Admin" }, null)
                                }
                            </li>


                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Crowdfunding</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
